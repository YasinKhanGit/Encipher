    Task3
    let num1=prompt("Enter the First number:");
    let calculation=prompt("Enter the operator");
    let num2=prompt("Enter the Second number:");
    if (calculation=="+"){
        alert(Number(num1)+Number(num2));
    }
    else if(calculation=="-"){
        alert(Number(num1)-Number(num2));
    }
    else if(calculation=="*"){
        alert(Number(num1)*Number(num2));
    }
    else if(calculation=="/"){
        alert(Number(num1)/Number(num2));
    }

